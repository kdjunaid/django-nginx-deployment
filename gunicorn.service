[Unit]
Description=gunicorn daemon for Django project
After=network.target

[Service]
User=your_username
Group=www-data
WorkingDirectory=/home/your_username/myproject
ExecStart=/home/your_username/myproject/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind 127.0.0.1:8000 mysite.wsgi:application

[Install]
WantedBy=multi-user.target
